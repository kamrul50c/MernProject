<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-5 offset-3" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <%= success %>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-5 offset-3" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (deleteMessage && deleteMessage.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-5 offset-3" role="alert">
        <%= deleteMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
